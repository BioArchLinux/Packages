_pkgname=dartR.popgen
_pkgver=1.0.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//[:-]/.}
pkgrel=1
pkgdesc="Analysing 'SNP' and 'Silicodart' Data Generated by Genome-Wide Restriction Fragment Analysis"
arch=('any')
url="https://cran.r-project.org/package=${_pkgname}"
license=('GPL-3.0-or-later')
depends=(
  r-adegenet
  r-crayon
  r-dartr.base
  r-dartr.data
  r-data.table
  r-dplyr
  r-furrr
  r-future
  r-ggdendro
  r-ggplot2
  r-patchwork
  r-stringr
)
optdepends=(
  r-expm
  r-fields
  r-gplots
  r-gridextra
  r-gsubfn
  r-igraph
  r-iterpc
  r-label.switching
  r-leaflet
  r-plyr
  r-proxy
  r-purrr
  r-qvalue
  r-raster
  r-reshape2
  r-scales
  r-siber
  r-snpstats
  r-sp
  r-tidyr
  r-viridis
  r-zoo
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('c999e4cdae941ee78cb29fcbca7ed25e')
b2sums=('9853f780c51b64da02c870949d5df6d77b9f98706161bc446c9154beb0bc077ec585e9208c7e9c8f6faaa329a276b3f0912242169c2caec24c4774bf3d4764ad')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

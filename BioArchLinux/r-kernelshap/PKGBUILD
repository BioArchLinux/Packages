# Maintainer: Pekka Ristola <pekkarr [at] protonmail [dot] com>

_pkgname=kernelshap
_pkgver=0.9.1
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Kernel SHAP"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-or-later')
depends=(
  r-dofuture
  r-foreach
)
checkdepends=(
  r-testthat
)
optdepends=(
  r-testthat
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('805975be03245dd6b3d8f00537640f99')
b2sums=('88aa8529145e5d80268cd7559bba6d02f2c51c56b0fbc5aafbe9de1330cf3c5df492984261f31c54951c8e56685756c0972d9a9f2908f0657e77f0f3ca177666')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

check() {
  cd "$_pkgname/tests"
  R_LIBS="$srcdir/build" NOT_CRAN=true Rscript --vanilla testthat.R
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

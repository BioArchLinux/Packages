_pkgname=bayesmeta
_pkgver=3.5
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Bayesian Random-Effects Meta-Analysis and Meta-Regression"
arch=('any')
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-or-later')
depends=(
  r-forestplot
  r-metafor
  r-mvtnorm
  r-numderiv
)
optdepends=(
  r-compute.es
  r-knitr
  r-rmarkdown
  r-r.rsp
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('99a335d418cec9acf6ff0e42250f8257')
b2sums=('7d2748e470955f0ac9a01faff9dfd15082a62d94aca74c83dac66138bb46c6b210739fd52ce8de58293c271ab6247ae388e37257438e85809b33897b89cb7c17')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

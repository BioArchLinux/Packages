_pkgname=colorspace
_pkgver=2.1-1
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="A Toolbox for Manipulating and Assessing Colors and Palettes"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('BSD-3-Clause')
depends=(
  r
)
optdepends=(
  r-dplyr
  r-ggplot2
  r-jpeg
  r-kernlab
  r-knitr
  r-mvtnorm
  r-png
  r-rcartocolor
  r-rcolorbrewer
  r-rmarkdown
  r-scales
  r-scico
  r-shiny
  r-shinyjs
  r-vcd
  r-viridis
  r-wesanderson
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('194f0bd09b21f970127ff43f3582c638')
b2sums=('d18a20e16912775946f2afff2ad25e84d3275020134ae74a2e48d354414e8ce69334a3589bbfdff6617d1d447029abe29a95573854fe139054c6848348844bfb')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s "/usr/lib/R/library/$_pkgname/LICENSE" "$pkgdir/usr/share/licenses/$pkgname"
}

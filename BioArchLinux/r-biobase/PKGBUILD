# Maintainer: Guoyi Zhang <guoyizhang at malacology dot net>

_pkgname=Biobase
_pkgver=2.62.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=2
pkgdesc="Base functions for Bioconductor"
arch=(x86_64)
url="https://bioconductor.org/packages/$_pkgname"
license=('Artistic-2.0')
depends=(
  r-biocgenerics
)
optdepends=(
  r-all
  r-biocstyle
  r-golubesets
  r-knitr
  r-runit
  r-tkwidgets
)
source=("https://bioconductor.org/packages/release/bioc/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('75a65eb015d58ca611f2bebca41f9d2d')
b2sums=('713baaea0bf34b8ab230cc101f4304b00e34bb4588efde71a860016e58d56f20f2dd5592df6731ffc5e2f85130ea50e08fdb26b1a5023e4d7d87928aeaa35174')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

# Maintainer: shun2wang <shuonwang@gmail.com>

_pkgname=BGGM
_pkgver=2.1.6
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Bayesian Gaussian Graphical Models"
arch=('x86_64')
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-only')
depends=(
  r-bfpack
  r-ggally
  r-ggplot2
  r-ggridges
  r-mvnfast
  r-network
  r-reshape
  r-rcpp
  r-rdpack
  r-sna
)
makedepends=(
  r-rcpparmadillo
  r-rcppdist
  r-rcppprogress
)
optdepends=(
  r-abind
  r-assortnet
  r-networktools
  r-mice
  r-psych
  r-knitr
  r-rmarkdown
  r-testthat
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('d3901aa8597b590a7fd179348efb607a')
b2sums=('6a316cfcdc8e6f5e7350812d6057893c1f7a77fa76602e41b2318de2ed78f930d7ff4e6a048c847890ac9208c99c27f5e5b16a1f903764fa92458bd72518b62a')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

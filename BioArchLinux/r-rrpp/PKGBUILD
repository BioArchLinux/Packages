# Maintainer: Guoyi <kuoi@malacology.net>

_pkgname=RRPP
_pkgver=2.1.2
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc='Linear Model Evaluation with Randomized Residuals in a Permutation Procedure'
arch=('any')
url="https://cran.r-project.org/package=${_pkgname}"
license=('GPL-3.0-or-later')
depends=(
  r-ape
  r-ggplot2
)
optdepends=(
  r-dplyr
  r-knitr
  r-rmarkdown
  r-testthat
  r-tibble
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('8d2858f7f489bc652a2f89677ba33335')
b2sums=('6663dcc02754f2685aebca656975eda1bdee79f8e630f37c9488deaa60f02f30ed2aea217ee5aedcad272c90f5b6435ab905aee8a2e84c36ac06932660e0c22d')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

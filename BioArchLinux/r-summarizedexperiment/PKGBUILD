_pkgname=SummarizedExperiment
_pkgver=1.33.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=0
pkgdesc="SummarizedExperiment container"
arch=(any)
url="https://bioconductor.org/packages/$_pkgname"
license=('Artistic-2.0')
depends=(
  r-biobase
  r-biocgenerics
  r-delayedarray
  r-genomeinfodb
  r-genomicranges
  r-iranges
  r-matrixgenerics
  r-s4arrays
  r-s4vectors
)
optdepends=(
  r-airway
  r-annotate
  r-annotationdbi
  r-biocstyle
  r-digest
  r-genomicfeatures
  r-hdf5array
  r-hgu95av2.db
  r-jsonlite
  r-knitr
  r-rhdf5
  r-rmarkdown
  r-runit
  r-testthat
  r-txdb.hsapiens.ucsc.hg19.knowngene
)
source=("https://bioconductor.org/packages/release/bioc/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('a18ad7510d889f08f45ef90eee0bb4ec')
b2sums=('0db252e1ea288c7a22ed7f3345dd92b22ac3957fcffc4ab7d778514e10a9c530393a0717aaa3257f91142318a88c59165b36949849c36a1bb8f56a2f5689af97')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

_pkgname=renv
_pkgver=1.1.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Project Environments"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
optdepends=(
  r-biocmanager
  r-cli
  r-covr
  r-cpp11
  r-devtools
  r-gitcreds
  r-jsonlite
  r-jsonvalidate
  r-knitr
  r-miniui
  r-modules
  r-packrat
  r-pak
  r-r6
  r-remotes
  r-reticulate
  r-rmarkdown
  r-rstudioapi
  r-shiny
  r-testthat
  r-uuid
  r-waldo
  r-webfakes
  r-yaml
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('e89d3b7e22f2a84eeeed57e6b4aa62c0')
b2sums=('e0c29b1c605cfd2e9b26c72fa7adf8f4075c1455ff99df2c4595063f6f77e422c72cd9e71885fc336ad3ff1c32956a3f9fa053aae5cfdc8a457e5b99cf52da1d')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s "/usr/lib/R/library/$_pkgname/LICENSE" "$pkgdir/usr/share/licenses/$pkgname"
}

# Maintainer: Guoyi Zhang <guoyizhang at malacology dot net>

_pkgname=renv
_pkgver=1.1.5
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Project Environments"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
optdepends=(
  r-biocmanager
  r-cli
  r-covr
  r-cpp11
  r-devtools
  r-generics
  r-gitcreds
  r-jsonlite
  r-jsonvalidate
  r-knitr
  r-miniui
  r-modules
  r-packrat
  r-pak
  r-r6
  r-remotes
  r-reticulate
  r-rmarkdown
  r-rstudioapi
  r-shiny
  r-testthat
  r-uuid
  r-waldo
  r-webfakes
  r-yaml
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('ce6545921b6a75f73b98be802736552f')
b2sums=('1753c0c606e65b68baa93d0a469585e6d5330b1fe68b950d89d98621e7423bb0dd8e22ededc48df8f05bb866bdf65d6e5345c75a511f18a30bee3f7b624cb1f5')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s "/usr/lib/R/library/$_pkgname/LICENSE" "$pkgdir/usr/share/licenses/$pkgname"
}

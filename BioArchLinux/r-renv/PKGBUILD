# Maintainer: Guoyi Zhang <guoyizhang at malacology dot net>

_pkgname=renv
_pkgver=1.1.4
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Project Environments"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
optdepends=(
  r-biocmanager
  r-cli
  r-covr
  r-cpp11
  r-devtools
  r-gitcreds
  r-jsonlite
  r-jsonvalidate
  r-knitr
  r-miniui
  r-modules
  r-packrat
  r-pak
  r-r6
  r-remotes
  r-reticulate
  r-rmarkdown
  r-rstudioapi
  r-shiny
  r-testthat
  r-uuid
  r-waldo
  r-webfakes
  r-yaml
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('a0a9a37a527d481d2938a40d6aeecd0b')
b2sums=('aef3831cb3096aca16cf1c42ab871423c5c4fa384d084462bdbf431419ca7b7758ee7faab20fdf3b9766d1f2ed3dd5f5c95f175d95331a9265e924570f9dd4b3')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s "/usr/lib/R/library/$_pkgname/LICENSE" "$pkgdir/usr/share/licenses/$pkgname"
}

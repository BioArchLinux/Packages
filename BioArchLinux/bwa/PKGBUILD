# Maintainer: PumpkinCheshire <sollyonzou at gmail dot com>

pkgname=bwa
pkgver=v0.7.17.r27.g3ddd7b8
pkgrel=1
pkgdesc="Burrows-Wheeler Aligner maps low-divergent sequences against a large reference genome"
arch=('x86_64')
url="http://bio-bwa.sourceforge.net/"
license=('GPL3')
depends=('perl' 'zlib')
makedepends=('git' 'make')
source=('git+https://github.com/lh3/bwa.git')
sha256sums=('SKIP')

pkgver() {
    git -C ${pkgname} describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    cd "$srcdir/${pkgname}"
    make
}

package() {
    install -Dm755 -t "${pkgdir}/usr/bin" ${srcdir}/${pkgname}/bwa
    install -Dm644 -t "${pkgdir}/usr/share/licenses/${pkgname}" ${pkgname}/COPYING
}

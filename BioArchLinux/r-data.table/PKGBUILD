_pkgname=data.table
_pkgver=1.14.10
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=2
pkgdesc="Extension of \`data.frame\`"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('MPL-2.0')
depends=(
  r
  zlib
)
optdepends=(
  r-bit
  r-bit64
  r-curl
  r-knitr
  r-nanotime
  r-r.utils
  r-rmarkdown
  r-xts
  r-yaml
  r-zoo
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('21b7b8bc86c1748ee57f63fa568d4fd7')
b2sums=('dd45752406be9c01934f6a98c83ca435f9595acde690c69d9b2b1c978d73539c11324ad5b4ab2951c31a65706611235e2ff1838154ea647b2a869d185e26fc71')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

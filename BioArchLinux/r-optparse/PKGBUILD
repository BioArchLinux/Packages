_pkgname=optparse
_pkgver=1.7.4
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=2
pkgdesc="Command Line Option Parser"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-or-later')
depends=(
  r-getopt
)
optdepends=(
  r-knitr
  r-stringr
  r-testthat
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('f47ae53b0e8096cc86de608d868fb303')
b2sums=('83be2c62b80943d1e1e833a927390cfa64108bf1d944b069f52679d2a486165f439fad0f5138157613d921b93c09cd8bd47cd79bb3c9ea7d01ddff41bd86614c')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

# Maintainer: Guoyi
pkgname=star
_pkgname=STAR
pkgver=2.7.11a
pkgrel=1
pkgdesc="RNA-seq aligner"
arch=('x86_64')
url="https://github.com/alexdobin/STAR"
license=('MIT')
depends=('gcc-libs' 'zlib' 'glibc')
makedepends=('vim')
optdepends=()
source=(https://github.com/alexdobin/STAR/archive/refs/tags/$pkgver.tar.gz)
sha256sums=('542457b1a4fee73f27a581b1776e9f73ad2b4d7e790388b6dc71147bd039f99a')
build() {
  cd "$_pkgname-$pkgver"
  cd source
  make -f Makefile
}

package() {
  cd "$_pkgname-$pkgver"
  cd bin/Linux_x86_64
  install -Dm 755 STAR $pkgdir/usr/bin/STAR
  install -Dm 755 STARlong $pkgdir/usr/bin/STARlong
  
}

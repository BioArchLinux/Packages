# Maintainer: Guoyi Zhang <myname at malacology dot net>

pkgname=treemix
pkgver=1.13
pkgrel=0
arch=('x86_64')
license=('GPL-3.0-or-later')
pkgdesc="a method for inferring the patterns of population splits \
	 and mixtures in the history of a set of populations \
	 https://doi.org/10.1371/journal.pgen.1002967"
url="https://bitbucket.org/nygcresearch/treemix"
depends=('gsl' 'openblas' 'boost-libs')
source=("${url}/downloads/${pkgname}-${pkgver}.tar.gz")
sha1sums=('69046717cae7df2cada981fb0f3400608ba91e99')

build() {
  cd "${pkgname}-${pkgver}"
  ./configure \
    --prefix=/usr
  cd src
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  cd src
  make DESTDIR="${pkgdir}" install
}

# Maintainer: Guoyi <kuoi@bioarchlinux.org>

_pkgname=ecodist
_pkgver=2.1.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//[:-]/.}
pkgrel=2
pkgdesc="Dissimilarity-Based Functions for Ecological Analysis"
arch=('x86_64')
url="https://cran.r-project.org/package=${_pkgname}"
license=('GPL-2.0-or-later')
depends=(
  r-igraph
)
optdepends=(
  r-knitr
  r-markdown
  r-testthat
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('058ddf74210376f4e1e7af2a5e2bb2a2')
b2sums=('f8aa4d7db8ead9bdbe0492f64a56e1ce940c22421eca78d4f202c7d23a855470df01f4adc6be9f3f9fe454247ed44ef997e7fef7cda7433cbafc8f05a32d2ed6')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

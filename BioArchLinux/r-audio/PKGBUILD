# Maintainer: Shun Wang <shuonwang at gmail dot com>

_pkgname=audio
_pkgver=0.1-12
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Audio Interface for R"
arch=('x86_64')
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
optdepends=(
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('9548c961ee632243dc0009b7c3f7648a')
b2sums=('b2bb2f420166f2db50f773e8dd026715dc34de4d007b65b59f46a08f14227aa82a74f6e86bf0ee86b53cdae6c306ecc7b83bfa3cffe22a7052ab6a3b9bda0aa9')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s "/usr/lib/R/library/$_pkgname/LICENCE" "$pkgdir/usr/share/licenses/$pkgname"
}

# Maintainer: Guoyi Zhang <myname at malacology dot net>

pkgname=r-reemsplots2
_pkgname=reemsplots2
pkgver=2019.01.14
pkgrel=1
pkgdesc="Generate plots to inspect and visualize the results of EEMS"
arch=(x86_64)
url="https://github.com/dipetkov/reemsplots2"
license=('GPL-2.0-or-later')
depends=('r-rcppeigen' 'r-rcpp' 'r-dplyr' 'r-ggplot2' 'r-scales' 'r-sp' 'r-tidyr')
optdepends=(
    'r-rcolorbrewer'
    'r-deldir'
    'r-mapproj'
    'r-rworldmap'
    'r-rowrldxtra'
    'r-knitr'
    'r-rmarkdown')
source=("git+$url.git")
md5sums=('SKIP')
pkgver(){
  cd $_pkgname
  printf $(TZ=UTC git log --no-walk --pretty="%cd" --decorate=full --date=format-local:%Y.%m.%d | head -n 1)
}

build() {
  cd ${srcdir}
  tar -zcvf ${_pkgname}.tar.gz  ${_pkgname}
  R CMD INSTALL ${_pkgname}.tar.gz -l "${srcdir}"
}

package() {
  cd $_pkgname

  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "$srcdir/$_pkgname" "$pkgdir/usr/lib/R/library"
  
}



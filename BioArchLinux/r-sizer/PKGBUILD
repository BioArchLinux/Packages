# Maintainer: Guoyi <kuoi@bioarchlinux.org>

_pkgname=SiZer
_pkgver=0.1-8
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//[:-]/.}
pkgrel=2
pkgdesc="Significant Zero Crossings"
arch=(any)
url="https://cran.r-project.org/package=${_pkgname}"
license=('GPL-2.0-or-later')
depends=(
  r-dplyr
  r-ggplot2
  r-rlang
  r-tidyr
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('41c13d1a971cdf568c13fc491d0f9f35')
b2sums=('a69990ffc7b6ad19eae62ecb41ed072103dec47e27fb30b83b7cd39a1d5489906d4a0b984601b2eba7e2b7a4dbce72dc08ce6c506af30d957df50045c1eb7c9b')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

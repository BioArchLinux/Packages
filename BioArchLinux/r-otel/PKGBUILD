# Maintainer: Guoyi <kuoi@bioarchlinux.org>

_pkgname=otel
_pkgver=0.2.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//[:-]/.}
pkgrel=2
pkgdesc="OpenTelemetry R API"
arch=(any)
url="https://cran.r-project.org/package=${_pkgname}"
license=('MIT')
depends=(
  r
)
optdepends=(
  r-callr
  r-cli
  r-glue
  r-jsonlite
  r-otelsdk
  r-processx
  r-shiny
  r-spelling
  r-testthat
  r-withr
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('cecd0f434a6327dcf5ca0bc2da494d06')
b2sums=('8d2bea3f976d54abe6a28758c23a65edff6586b1fa2a0ecb18fbd2892b434795545426480d4ecad361934f86d560845783b9f957d9e18037bff379f609f0f8a3')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

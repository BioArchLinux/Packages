_pkgname=scoringutils
_pkgver=2.1.2
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Utilities for Scoring and Assessing Predictions"
arch=('any')
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r-checkmate
  r-cli
  r-data.table
  r-ggplot2
  r-metrics
  r-purrr
  r-scoringrules
)
optdepends=(
  r-ggdist
  r-kableextra
  r-knitr
  r-magrittr
  r-rmarkdown
  r-testthat
  r-vdiffr
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('b473cd8362f2ce4c63a4cf0f02e4038a')
b2sums=('16ee2db67c37d373bb72f2e1dc1d5942f00b40fc580d61891909d25f68045d42846ddf090fdbdb0038a2e229c2283ed4adc3bc4eca0e6555ae6e8f357d79dfdb')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

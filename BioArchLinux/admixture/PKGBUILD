pkgname=admixture
pkgver=1.3.0
pkgrel=1
pkgdesc="fast ancestry estimation https://doi.org/10.1101/gr.094052.109"
url='https://dalexander.github.io/admixture/index.html'
arch=('x86_64')
license=('unknown')
depends=('glibc')
source=("https://dalexander.github.io/admixture/binaries/admixture_linux-${pkgver}.tar.gz")
sha256sums=('353e8b170c81f8d95946bf18bc78afda5d6bd32645b2a68658bd6781ff35703c')
package() {
  install -Dm755 ${srcdir}/dist/admixture_linux-${pkgver}/$pkgname "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 ${srcdir}/dist/admixture_linux-${pkgver}/admixture-manual.pdf  $pkgdir/usr/share/doc/$pkgname/admixture-manual.pdf
}

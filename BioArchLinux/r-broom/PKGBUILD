  r-auc
  r-bbmle
  r-betareg
  r-biglm
  r-bingroup
  r-boot
  r-btergm
  r-car
  r-cardata
  r-caret
  r-cluster
  r-cmprsk
  r-coda
  r-covr
  r-drc
  r-e1071
  r-emmeans
  r-epir
  r-ergm
  r-fixest
  r-gam
  r-gee
  r-geepack
  r-glmnet
  r-glmnetutils
  r-gmm
  r-hmisc
  r-interp
  r-irlba
  r-joinerml
  r-kendall
  r-knitr

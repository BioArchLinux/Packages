_pkgname=broom
_pkgver=1.0.1
pkgname=r-${_pkgname,,}
pkgver=1.0.1
pkgrel=2
pkgdesc='Convert Statistical Objects into Tidy Tibbles'
arch=('any')
url="https://cran.r-project.org/package=${_pkgname}"
license=('MIT')
depends=(
  r
  r-backports
  r-dplyr
  r-ellipsis
  r-generics

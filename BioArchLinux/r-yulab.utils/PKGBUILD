_pkgname=yulab.utils
_pkgver=0.1.1
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Supporting Functions for Packages Maintained by 'YuLab-SMU'"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=(Artistic2.0)
depends=(
  r-cli
  r-digest
  r-fs
  r-memoise
  r-rlang
)
optdepends=(
  r-httr
  r-jsonlite
  r-openssl
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('a9d96af7a04ec621f7f23de60dc8f2d9')
b2sums=('16f3b2845317445df8117e555586c7c4d8965fd2c867dec104a30b80bd78e37f9389bb0043af95d9c0fc3615b5f80209b5605861b3b8b5d0215c6a5d10c919d5')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

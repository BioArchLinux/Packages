_pkgname=pkgload
_pkgver=1.5.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Simulate Package Installation and Attach"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r-cli
  r-desc
  r-fs
  r-glue
  r-lifecycle
  r-pkgbuild
  r-processx
  r-rlang
  r-rprojroot
)
optdepends=(
  r-bitops
  r-jsonlite
  r-mathjaxr
  r-pak
  r-rcpp
  r-remotes
  r-rstudioapi
  r-testthat
  r-usethis
  r-withr
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('35c0516ec08693ed4d3337c9d6af0067')
b2sums=('0ee1c73532cc3ef67faffed17d79ac28c3d5e67f51f8daee5bbb8abeabaf007cb64ab439237c3c32155d0683358a82fb9f3dd8e93b429bc08f9fa3d19926539c')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

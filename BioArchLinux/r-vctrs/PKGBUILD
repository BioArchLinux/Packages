_pkgname=vctrs
_pkgver=0.7.1
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Vector Helpers"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r-cli
  r-glue
  r-lifecycle
  r-rlang
)
optdepends=(
  r-bit64
  r-covr
  r-crayon
  r-dplyr
  r-generics
  r-knitr
  r-pillar
  r-pkgdown
  r-rmarkdown
  r-testthat
  r-tibble
  r-waldo
  r-withr
  r-xml2
  r-zeallot
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('a4a01544d69397983828543743d5e8f1')
b2sums=('c6cd485cbe7fcb6a7f1fa4dff2d5c71807f5f48da7c3a976b4af0fe549c2bac38b05082993e1b529c856ae8818d1d905049a4d26f9dad40d61a3f3d27e0d8039')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s "/usr/lib/R/library/$_pkgname/LICENSE" "$pkgdir/usr/share/licenses/$pkgname"
}

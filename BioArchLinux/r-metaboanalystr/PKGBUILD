  r-gplots
  r-igraph
  r-impute
  r-jsonlite
  r-lattice
  r-mass
  r-msnbase
  r-pcamethods
  r-plotly
  r-plyr
  r-proc
  r-progress
  r-purrr
  r-qs
  r-rbgl
  r-rcolorbrewer
  r-rcpp
  r-rlang
  r-rserve
  r-rsqlite
  r-scales
  r-siggenes
  r-tibble
  r-vctrs
)
makedepends=('git' 'gcc-fortran')
optdepends=(
r-car

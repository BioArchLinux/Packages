arch=('x86_64')
url="https://github.com/xia-lab/MetaboAnalystR"
license=('GPL3')
depends=(r
  r-biocparallel
  r-cairo
  r-caret
  r-crmn
  r-data.table
  r-dplyr
  r-edger
  r-fgsea
  r-ggplot2

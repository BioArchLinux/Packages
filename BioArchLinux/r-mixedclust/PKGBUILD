_pkgname=mixedClust
_pkgver=1.0.2
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=2
pkgdesc="Co-Clustering of Mixed Type Data"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-or-later')
depends=(
  blas
  lapack
  r-fda
  r-rcpp
)
makedepends=(
  r-rcpparmadillo
  r-rcppprogress
)
optdepends=(
  r-knitr
  r-ordinalclust
  r-rmarkdown
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('096a0f3bf316996db2fefca0f55d9fa6')
b2sums=('2efea2fd46d0ce59eacb2001c08386a436fe34fc39cbb9236fcfca37fe01bb2c7257220c5d0ce590f7792e0693f1180b1f852c9de0fd46c466972e2bffb69704')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

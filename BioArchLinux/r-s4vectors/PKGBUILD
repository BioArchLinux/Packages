_pkgname=S4Vectors
_pkgver=0.48.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Foundation of vector-like and list-like containers in Bioconductor"
arch=(x86_64)
url="https://bioconductor.org/packages/$_pkgname"
license=('Artistic-2.0')
depends=(
  r-biocgenerics
)
optdepends=(
  r-biocstyle
  r-data.table
  r-delayedarray
  r-genomicranges
  r-graph
  r-iranges
  r-knitr
  r-runit
  r-shortread
  r-summarizedexperiment
)
source=("https://bioconductor.org/packages/release/bioc/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('630961a4e2d96366a617dcc35f058105')
b2sums=('4f580870092dfd5decbae9fdba3826917e2a6bf576d5aebc6246ef46e0961478f9ea0e83f1333d229fee765597a08c6be9bd24bbc9779f42fb8608bfd4a12586')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

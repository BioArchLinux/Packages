# Maintainer: Shun Wang <shuonwang at gmail dot com>

_pkgname=nanonext
_pkgver=1.7.1
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="NNG (Nanomsg Next Gen) Lightweight Messaging Library"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
makedepends=(
  cmake
)
optdepends=(
  r-later
  r-litedown
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('2aec24a40347a07f937ec62033b0ccae')
b2sums=('2079a68c635958612344cfd0a12f33ef2c30b9a8ef19133d80c98c8be72b57ae3af745e1cf1accbf733eac3ebe28cd64c2efe27dd2546053510b25399d2038e4')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

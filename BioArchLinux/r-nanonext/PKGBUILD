# Maintainer: Shun Wang <shuonwang at gmail dot com>

_pkgname=nanonext
_pkgver=1.7.2
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="NNG (Nanomsg Next Gen) Lightweight Messaging Library"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
makedepends=(
  cmake
)
optdepends=(
  r-later
  r-litedown
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('47736437b879166180f88648e0b6f633')
b2sums=('14ec02640ba13561a6bd4d0145b3240a7ae855aef7163d4c3e84b281c140668bb58e49be5832229d9a54684eafce91d203be556344343227500c7146c64a4292')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

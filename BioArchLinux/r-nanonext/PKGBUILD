# Maintainer: Shun Wang <shuonwang at gmail dot com>

_pkgname=nanonext
_pkgver=1.7.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="NNG (Nanomsg Next Gen) Lightweight Messaging Library"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
makedepends=(
  cmake
)
optdepends=(
  r-later
  r-litedown
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('7df1c307949b78970fd726f4a5e53414')
b2sums=('08ab394ad4300774a603ba442cbc8cd9bd592ebbc935d0426291121c5e02ca64b097a413723b6c3c0ea3ac15d0f1d72c70fff95114f7b5efaa0572c2e89e96ec')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

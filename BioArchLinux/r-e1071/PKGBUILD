_pkgname=e1071
_pkgver=1.7-17
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Misc Functions of the Department of Statistics, Probability Theory Group (Formerly: E1071), TU Wien"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-only OR GPL-3.0-only')
depends=(
  r-proxy
)
optdepends=(
  r-mlbench
  r-randomforest
  r-slam
  r-sparsem
  r-xtable
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('7e8d521ac6b3a92c7e1888dbb8e59c47')
b2sums=('31cb37b4ed41f4c8d8677c56c3401127290bb05482d4b8baea1554e5e8a8f3adfd9dd1f3eecc2019ee1f3b3c55f141478179f842efc9ba707a94f08d641a37b9')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

_pkgname=pcalg
_pkgver=2.7-9
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=3
pkgdesc="Methods for Graphical Models and Causal Inference"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-or-later')
depends=(
  blas
  lapack
  r-abind
  r-bdsmatrix
  r-clue
  r-corpcor
  r-fastica
  r-ggm
  r-graph
  r-igraph
  r-rbgl
  r-rcpp
  r-robustbase
  r-sfsmisc
  r-vcd
)
makedepends=(
  r-bh
  r-rcpparmadillo
)
optdepends=(
  r-dagitty
  r-ggplot2
  r-huge
  r-mvtnorm
  r-rgraphviz
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('a04f0500d81148d2265f1f76d7f220e9')
b2sums=('5243140c08ecc2c4c1de64b0841ee9b9e8f81ad394eb0652d8f0cf103731288a13a4f6ebd30c39f8136b3ab8aee033efd4009edebf72c07a42efc0891e15198f')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

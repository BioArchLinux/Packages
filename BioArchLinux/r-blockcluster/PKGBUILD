_pkgname=blockcluster
_pkgver=4.5.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=2
pkgdesc="Co-Clustering Package for Binary, Categorical, Contingency and Continuous Data-Sets"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-3.0-or-later')
depends=(
  r-rtkore
)
makedepends=(
  r-rcpp
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('795bf2ba5d141bef2ce84af9dc94b3c2')
b2sums=('a2c302d9bf713b2df1bca33d4fc6251f850098bb9db1ce7e3765935ccf33e8643e499633fba7b4db471ebfcbf76c098407d1d3098f204729fdabbdef9773dc79')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

_pkgname=ShortRead
_pkgver=1.64.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=0
pkgdesc="FASTQ input and manipulation"
arch=(x86_64)
url="https://bioconductor.org/packages/$_pkgname"
license=('Artistic-2.0')
depends=(
  r-biobase
  r-biocgenerics
  r-biocparallel
  r-biostrings
  r-genomeinfodb
  r-genomicalignments
  r-genomicranges
  r-hwriter
  r-iranges
  r-latticeextra
  r-pwalign
  r-rsamtools
  r-s4vectors
  zlib
)
makedepends=(
  r-rhtslib
  r-xvector
)
optdepends=(
  r-biocstyle
  r-biomart
  r-genomicfeatures
  r-knitr
  r-runit
  r-yeastnagalakshmi
)
source=("https://bioconductor.org/packages/release/bioc/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('6550882a18baeb952edc082bd4aef6ec')
b2sums=('aa7f534b430c79a109c6c5b3a0d36511cb2313b952d79621b2e8c6a5b57ddd1d7ba07ca51d7f906d0702b106a4be47a3c7daf6baeaa81ae44e59874e05b04615')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

# Maintainer: Pekka Ristola <pekkarr [at] protonmail [dot] com>

_pkgname=doFuture
_pkgver=1.1.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Use Foreach to Parallelize via the Future Framework"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('LGPL-2.1-or-later')
depends=(
  r-foreach
  r-future
  r-future.apply
  r-globals
  r-iterators
)
checkdepends=(
)
optdepends=(
  r-dorng
  r-markdown
  r-r.rsp
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('dae3e9c165f7e527070e261d57da1851')
b2sums=('6cac1dad089aeece615f49724f5422f44d3a12e0438dcc14cc5e77ca7cd07ec4b90b62b10be1bab8c28d4e4eab442fde3d45fdafb21f063c276db53f617f2966')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

_check() {
  cd "$_pkgname/tests"
  R_LIBS="$srcdir/build" NOT_CRAN=true Rscript --vanilla testthat.R
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

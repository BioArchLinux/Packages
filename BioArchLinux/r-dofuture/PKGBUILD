# Maintainer: Pekka Ristola <pekkarr [at] protonmail [dot] com>

_pkgname=doFuture
_pkgver=1.2.1
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Use Foreach to Parallelize via the Future Framework"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('LGPL-2.1-or-later')
depends=(
  r-foreach
  r-future
  r-future.apply
  r-globals
  r-iterators
)
checkdepends=(
)
optdepends=(
  r-dorng
  r-markdown
  r-r.rsp
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('8ad992008c847c4de3564801702d8dc3')
b2sums=('61ea33448bfd6531b22b92b68338f0c2673d3ebf62f9ad23628143260cf12396f08d673e28e13291993f97adf298987466e2f2bed76609a95497c11ce0b568dc')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

_check() {
  cd "$_pkgname/tests"
  R_LIBS="$srcdir/build" NOT_CRAN=true Rscript --vanilla testthat.R
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

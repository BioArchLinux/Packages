# Maintainer: Pekka Ristola <pekkarr [at] protonmail [dot] com>

_pkgname=doFuture
_pkgver=1.2.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Use Foreach to Parallelize via the Future Framework"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=('LGPL-2.1-or-later')
depends=(
  r-foreach
  r-future
  r-future.apply
  r-globals
  r-iterators
)
checkdepends=(
)
optdepends=(
  r-dorng
  r-markdown
  r-r.rsp
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('041101f9222874ce9700b035142cefc5')
b2sums=('895b0aac84a956830d9843f94970bd5f1e064471f86b6839c9333e59d3bf4315bfc4f69ea8672518f4b857481676329ebdd8ae9633dd244c1c4bfce3bbe53832')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

_check() {
  cd "$_pkgname/tests"
  R_LIBS="$srcdir/build" NOT_CRAN=true Rscript --vanilla testthat.R
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

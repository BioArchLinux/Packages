# Maintainer: ZJLIN <zjin841126@gmail.com>
# Contributor: Guoyi Zhang <guoyizhang at malacology dot net>

pkgname=trimmomatic
_pkgname=Trimmomatic
pkgver=0.40
pkgrel=0
pkgdesc='A flexible read trimming tool for Illumina NGS data'
arch=('any')
url="http://www.usadellab.org/cms/?page=trimmomatic"
license=('GPL-3.0-or-later')
depends=('java-runtime')
makedepends=('java-environment>=11' 'maven')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/usadellab/Trimmomatic/archive/refs/tags/v${pkgver}.tar.gz"
        "${pkgname}"
        )
md5sums=('b8f3f9247d4304c213236c1b31762cca'
         'ef9e5b089995f8c422c56c68aef731f4')

build() {
  cd ${_pkgname}-${pkgver}
  mvn clean package
}
package() {
  install -Dm 755 ${srcdir}/${_pkgname}-${pkgver}/target/${pkgname}-${pkgver}.jar ${pkgdir}/usr/share/java/${pkgname}/${pkgname}.jar
  install -Dm 755 ${srcdir}/${pkgname} -t  ${pkgdir}/usr/bin

  mkdir -p ${pkgdir}/usr/share/${pkgname}/adapters
  install -Dm 755 -t ${pkgdir}/usr/share/${pkgname}/adapters ${srcdir}/${_pkgname}-${pkgver}/adapters/*
}

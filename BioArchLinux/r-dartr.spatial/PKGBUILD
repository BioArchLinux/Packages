# Maintainer: Guoyi <kuoi@bioarchlinux.org>

_pkgname=dartR.spatial
_pkgver=1.0.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//[:-]/.}
pkgrel=1
pkgdesc="Applying Landscape Genomic Methods on 'SNP' and 'Silicodart' Data"
arch=('any')
url="https://cran.r-project.org/package=${_pkgname}"
license=('GPL-3.0-or-later')
depends=(
  r-adegenet
  r-crayon
  r-dartr.base
  r-dartr.data
  r-data.table
  r-ggplot2
  r-raster
  r-sp
  r-stampp
  r-tidyr
  r-vegan
  r-dismo
)
optdepends=(
  r-gdistance
  r-gplots
  r-mmod
  r-popgenreport
  r-rrblup
  r-sf
  r-terra
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('c5ed5617ea1dfd53dee195147c435727')
b2sums=('61e2f0f7af9fb7b3febe4517cd883b5a4082ac8195b2abadb3d80a196048352dbaad69a22d2d784313d3afd34511025d79a4b5a1782ffb9487550ae8a75868fd')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

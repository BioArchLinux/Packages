_pkgname=pbdZMQ
_pkgver=0.3-12
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Programming with Big Data -- Interface to 'ZeroMQ'"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-3.0-only')
depends=(
  r
  zeromq
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('30c2f343a26426d88c11469075312566')
b2sums=('13dcdbea21cad6343a10373ca0b1f00a6ccb21e2e11768797df1f0a5e9d0697d14edc444257a13dd83dcd0ce57d2b0dd0a524d240e42d74b69c6ca02b94859ef')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

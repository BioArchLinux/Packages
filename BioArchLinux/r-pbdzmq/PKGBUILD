_pkgname=pbdZMQ
_pkgver=0.3-10
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=2
pkgdesc="Programming with Big Data -- Interface to 'ZeroMQ'"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=(GPL3)
depends=(
  r
  zeromq
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('40ea05a124a334615da446e17343d40f')
b2sums=('05acaf98d07bf1dc22ed249cd32441c6b5d3e9034edb2db04845767f02c0f55659b771038f94c1a3c5ebf85aa4c6b708db3e67044ca4314046a6e1915ea9aea1')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

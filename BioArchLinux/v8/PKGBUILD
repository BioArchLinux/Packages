pkgname=v8
pkgver=10.2.23
pkgrel=1
pkgdesc="Google's open source JavaScript and WebAssembly engine"
arch=('x86_64')
url="https://v8.dev"
license=('BSD')
depends=('icu')
optional=('rlwrap')
makedepends=('git' 'lld' 'python3')
conflicts=('v8-r' 'v8-3.14' 'v8.3.14-bin' 'v8-6.7-static' 'v8-static-gyp' 'v8-static-gyp-5.4')
provides=('v8')
source=("https://www.garbuszus.de/archpkgs/x86_64/v8-r-${pkgver}-1-x86_64.pkg.tar.zst")
sha256sums=('774bd297ce50a12a57689bfc46fcd79db06baf0eac9bc8d53380c75d74568e8d')
package() {
  install -dm0755 "${pkgdir}/usr/"
  cd ${srcdir}/usr/
  cp -r * ${pkgdir}/usr/
}

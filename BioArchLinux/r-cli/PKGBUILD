# Maintainer: Guoyi Zhang <guoyizhang at malacology dot net>

_pkgname=cli
_pkgver=3.6.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Helpers for Developing Command Line Interfaces"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
optdepends=(
  r-callr
  r-covr
  r-crayon
  r-digest
  r-glue
  r-htmltools
  r-htmlwidgets
  r-knitr
  r-processx
  r-ps
  r-rlang
  r-rmarkdown
  r-rprojroot
  r-rstudioapi
  r-testthat
  r-tibble
  r-whoami
  r-withr
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('4691dd066c26e428327eb40e46a4e8c2')
b2sums=('1a8fffcdb236b2c471b0d49383488717ccc50397237b01adfb470085c15f2e8f4ba92965ada4c7970d4824150bde5107ccd8e84f79bcbf6042dfa66bdbc942cf')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s "/usr/lib/R/library/$_pkgname/LICENSE" "$pkgdir/usr/share/licenses/$pkgname"
}

# Maintainer: Guoyi Zhang <guoyizhang at malacology dot net>

_pkgname=cli
_pkgver=3.6.2
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=3
pkgdesc="Helpers for Developing Command Line Interfaces"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('MIT')
depends=(
  r
)
optdepends=(
  r-callr
  r-covr
  r-crayon
  r-digest
  r-glue
  r-htmltools
  r-htmlwidgets
  r-knitr
  r-mockery
  r-processx
  r-ps
  r-rlang
  r-rmarkdown
  r-rprojroot
  r-rstudioapi
  r-testthat
  r-tibble
  r-whoami
  r-withr
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('36e2b58e8de26def5fcf17b6dd71dad7')
b2sums=('5e297757ffecbe6b9b8f62096fa9a58a9c301ad5ace99cd82cb7e7f9c11719b4963cc35441d5104d5e1e772cecbc275756f11f0372770c4beeccb32a3c67219d')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s "/usr/lib/R/library/$_pkgname/LICENSE" "$pkgdir/usr/share/licenses/$pkgname"
}

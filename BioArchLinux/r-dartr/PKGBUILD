  r-ape
  r-crayon
  r-dartr.data
  r-data.table
  r-dplyr
  r-fields
  r-foreach
  r-ggplot2
  r-gridextra
  r-patchwork
  r-plyr
  r-popgenreport
  r-raster
  r-reshape2
  r-shiny
  r-snprelate
  r-sp
  r-stampp
  r-stringr
  r-tidyr
  r-vegan
)
optdepends=(
  r-devtools
  r-directlabels
  r-dismo
  r-doparallel
  r-expm
  r-gdistance
  r-gganimate
  r-ggrepel
  r-ggtern
  r-ggthemes
  r-gplots
  r-gtable
  r-hardyweinberg
  r-hierfstat
  r-igraph
  r-iterpc
  r-knitr
  r-label.switching
  r-leaflet
  r-leaflet.minicharts
  r-markdown
  r-mmod
  r-networkd3
  r-pegas
  r-pheatmap
  r-plotly

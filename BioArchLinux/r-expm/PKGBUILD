_pkgname=expm
_pkgver=0.999-8
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Matrix Exponential, Log, 'etc'"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=(GPL)
depends=(
  blas
  lapack
  r
)
makedepends=(
  gcc-fortran
)
optdepends=(
  r-rcolorbrewer
  r-rmpfr
  r-sfsmisc
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('bca6fae94f270b8ec63c210519079a0c')
b2sums=('c990fd081cd22536b14e5df6f66c376f9572e45fb6da11d320cfd7cf07cc8717dd7712bbe83b4e11e20f3cb5766a9976fb85fe697b2d47cafafdba353d2f6c85')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

# Maintainer: Guoyi Zhang <guoyizhang at malacology dot net>

_pkgname=XVector
_pkgver=0.50.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Foundation of external vector representation and manipulation in Bioconductor"
arch=(x86_64)
url="https://bioconductor.org/packages/$_pkgname"
license=('Artistic-2.0')
depends=(
  r-biocgenerics
  r-iranges
  r-s4vectors
  zlib
)
optdepends=(
  r-biostrings
  r-drosophila2probe
  r-runit
)
source=("https://bioconductor.org/packages/release/bioc/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('929b5a997ee6325853057c28ca3df77d')
b2sums=('2e3ee9870538f46ef0b71050ed26c31caa03910dc82c2111a4d350151a56dccfeaa730245ee6bad34d096c061341501145d6b52832101865b003f40b043a36b0')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

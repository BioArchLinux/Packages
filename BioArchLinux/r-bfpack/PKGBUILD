# Contributor: Shun Wang <shuonwang at gmail dot com>

_pkgname=BFpack
_pkgver=1.5.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Flexible Bayes Factor Testing of Scientific Expectations"
arch=('x86_64')
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-3.0-or-later')
depends=(
  r-bain
  r-mvtnorm
  r-pracma
  r-lme4
  r-ergm
  r-bergm
  r-sandwich
  r-qrm
  r-coda
  r-metabma
  r-berryfunctions
)
makedepends=(
  gcc-fortran
)
optdepends=(
  r-testthat
  r-polycor
  r-pscl
  r-metafor
  r-knitr
  r-rmarkdown
  r-lmtest
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('59a58b68138954baf9333b8ca43bec0d')
b2sums=('10862ecf0fcabad3cde5532be06030875c6d091505e4fde67ec1ae70d02c561158ed2307b94e777fd64dbac7b9781269abc93e0e44efe28658271c08f2d34547')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

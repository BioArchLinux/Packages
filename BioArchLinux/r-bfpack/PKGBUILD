_pkgname=BFpack
_pkgver=1.4.2
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=4
pkgdesc="Flexible Bayes Factor Testing of Scientific Expectations"
arch=('x86_64')
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-3.0-or-later')
depends=(
  r-bain
  r-mvtnorm
  r-pracma
  r-lme4
  r-extradistr
  r-ergm
  r-bergm
  r-sandwich
  r-qrm
  r-coda
  r-metabma
  r-berryfunctions
)
makedepends=(
  gcc-fortran
)
optdepends=(
  r-testthat
  r-polycor
  r-pscl
  r-metafor
  r-knitr
  r-rmarkdown
  r-lmtest
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('cf05d6b82867376c3da3e74cd495afde')
b2sums=('12e152c27ed5b4973d95aebeeca50df863699a411148e25b700448b47f918b8f47b3eed3a3190defbc0a7cb88226eb070bdc780d29f0b71fb3a6b4c675ad364f')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

# Maintainer: shun2wang <shuonwang@gmail.com>

_pkgname=bgms
_pkgver=0.1.6.1
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Bayesian Analysis of Networks of Binary and/or Ordinal Variables"
arch=('x86_64')
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-or-later')
depends=(
  r-rcpp
  r-rdpack
  r-rcppparallel
  r-coda
  r-lifecycle
)
makedepends=(
  r-rcpparmadillo
  r-dqrng
  r-bh
)
optdepends=(
  r-knitr
  r-qgraph
  r-rmarkdown
  r-testthat
  r-ggplot2
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('268c5797b183c671a4e8860e9f43fb42')
b2sums=('d7723318820e6e66fc46424b5421eae98b326856a9efa06074f2e92adc23ff71aa748afd81eec7420506960ccb6bc90ae4a1c9063b7053f968a13c2272cda43e')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

# Maintainer: shun2wang <shuonwang@gmail.com>

_pkgname=bgms
_pkgver=0.1.6.2
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Bayesian Analysis of Networks of Binary and/or Ordinal Variables"
arch=('x86_64')
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-or-later')
depends=(
  r-rcpp
  r-rdpack
  r-rcppparallel
  r-coda
  r-lifecycle
)
makedepends=(
  r-rcpparmadillo
  r-dqrng
  r-bh
)
optdepends=(
  r-knitr
  r-qgraph
  r-rmarkdown
  r-testthat
  r-ggplot2
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('eff7e1c2c8408dd2ae599faa4f4d4f4b')
b2sums=('53673acc0f7988672bc018541364f97c8ae65bf3d050f72fe8fbbfd0716a93c008169bf33f2a8eccd3acb5986de0c62895ffcbdcfb92d54ab6ba66dc08b9a3b7')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

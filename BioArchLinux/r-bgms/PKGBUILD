# Maintainer: shun2wang <shuonwang@gmail.com>

_pkgname=bgms
_pkgver=0.1.6.0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Bayesian Analysis of Networks of Binary and/or Ordinal Variables"
arch=('x86_64')
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-or-later')
depends=(
  r-rcpp
  r-rdpack
  r-rcppparallel
  r-coda
  r-lifecycle
)
makedepends=(
  r-rcpparmadillo
  r-dqrng
  r-bh
)
optdepends=(
  r-knitr
  r-qgraph
  r-rmarkdown
  r-testthat
  r-ggplot2
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('72d3cf4dc3ebcaa96e7ef9fc9ba08737')
b2sums=('d2072902b28b51091ca8bfdc4fa2cef730422ad5ba0b5e356f9a85d35fb98d163fd8c5f8efcb1cb3ef00abb164e61b3671bad376fbb43ce557cce68934edc3ff')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

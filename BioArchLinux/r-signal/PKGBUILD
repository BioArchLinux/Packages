_pkgname=signal
_pkgver=1.8-0
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=4
pkgdesc="Signal Processing"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-only')
depends=(
  r
)
makedepends=(
  gcc-fortran
)
optdepends=(
  r-pracma
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('b10a342e277ff7642dd90c70e87e579a')
b2sums=('647e6cc61fe37152db6baecae06c01802420adc9cd3753798c5918d5c9ba5b7cc1ee195f0605741f7aaa8818df209e9b4e8f39d175c3e2341f3e367f753c62cc')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

_pkgname=proxy
_pkgver=0.4-29
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=1
pkgdesc="Distance and Similarity Measures"
arch=(x86_64)
url="https://cran.r-project.org/package=$_pkgname"
license=('GPL-2.0-only OR GPL-3.0-only')
depends=(
  r
)
optdepends=(
  r-cba
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('1180e4455fdadb2267aa62512a06b079')
b2sums=('1dae8e08b98d4cc4ef82924685c1c366b48731f4842221855de1f91adee5ab3bb9f3db99d0228f3aea009fbcc20c29b9588ef137e4d7ed0f0a6485ea29988617')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}

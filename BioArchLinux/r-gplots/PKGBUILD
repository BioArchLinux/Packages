_pkgname=gplots
_pkgver=3.1.3
pkgname=r-${_pkgname,,}
pkgver=${_pkgver//-/.}
pkgrel=7
pkgdesc="Various R Programming Tools for Plotting Data"
arch=(any)
url="https://cran.r-project.org/package=$_pkgname"
license=(GPL2)
depends=(
  r-catools
  r-gtools
)
optdepends=(
  r-knitr
  r-r2d2
)
source=("https://cran.r-project.org/src/contrib/${_pkgname}_${_pkgver}.tar.gz")
md5sums=('00da75ab2e323f138ee297b78394af36')
b2sums=('c6a56409a4a22790294702b49fcc63d6b6538460ac3a257f155bae5bfbbbcf8ea14284dbdcb8850c045b77cc5cc7fc93e447fc23efb91ec1a6e7c176f67d0c1b')

build() {
  mkdir build
  R CMD INSTALL -l build "$_pkgname"
}

package() {
  install -d "$pkgdir/usr/lib/R/library"
  cp -a --no-preserve=ownership "build/$_pkgname" "$pkgdir/usr/lib/R/library"
}
